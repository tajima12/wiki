<!DOCTYPE html>
<html lang="en">
{{ template "header" . }}
<body>
    <header>
        <h1>go-wiki</h1>
    </header>
    {{ template "global-navigator" . }}
    <article>
        <header>
            <h2>{{ .article.Title }}</h2>
            <p>created by {{ .article.User }}</p>
            <p>posted on today {{.article.Created}}</p>
            <p>updated {{.article.Updated}}</p>
        </header>
        <div id="article">
            {{ .article.Body }}
        </div>
        <p><a href="/article/{{.article.ID}}/edit">edit this</a></p>

        <h3>Comments</h3>
        {{range .comments}}
            <li>
              <p>{{ .User }}: {{ .Body }}</p>
            </li>
        {{end}}
        <form action="/article/{{.article.ID}}/comment/save" method="POST">
          {{ template "csrf-hidden" . }}
          add comment<br>
          <textarea name="comment"></textarea>
          <input type="submit" value="submit">
        </form>
    </article>
    <aside>
        <h2></h2>
    </aside>
    {{ template "footer" .}}
</body>
</html>
